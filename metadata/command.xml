<?xml version="1.0"?>
<wayfire>
	<plugin name="command">
		<_short>Command</_short>
		<_short xml:lang="tr">Komut</_short>
		<_long>A plugin to bind key combo (key, button, touch) to execute shell commands.</_long>
		<_long xml:lang="tr">Kabuk komutlarını yürütmek için anahtar combo (tuşu, düğme, dokunma) bağlamak için bir eklenti.</_long>
		<category>General</category>
		<option name="bindings" type="dynamic-list">
			<_short>Regular bindings</_short>
			<_short xml:lang="tr">Düzenli kısayol</_short>
			<_long>Regular bindings</_long>
			<_long xml:lang="tr">Düzenli kısayol</_long>
			<entry prefix="command_" type="string">
				<_short>Command</_short>
				<_short xml:lang="tr">Komut</_short>
				<_long>Sets the command to execute.</_long>
				<_long xml:lang="tr">Çalıştırılacak komutu ayarlar.</_long>
				<hint>file</hint>
			</entry>
			<entry prefix="binding_" type="activator">
				<_short>Binding</_short>
				<_short xml:lang="tr">Klavye kısayolu</_short>
				<_long>Sets the triggering activator binding.</_long>
				<_long xml:lang="tr">Tetikleyici aktivatör bağlamayı ayarlar.</_long>
			</entry>
		</option>

		<option name="repeatable_bindings" type="dynamic-list">
			<_short>Repeatable bindings</_short>
			<_short xml:lang="tr">Tekrarlanabilir kısayol</_short>
			<_long>Bindings which repeat their command if their key or button is held pressed.</_long>
			<_long xml:lang="tr">Anahtarları veya düğmesine basıldığında komutlarını tekrarlayan kısayollar.</_long>
			<entry prefix="command_" type="string">
				<_short>Command</_short>
				<_short xml:lang="tr">Komut</_short>
				<_long>Sets the command to execute.</_long>
				<_long xml:lang="tr">Çalıştırılacak komutu ayarlar.</_long>
				<hint>file</hint>
			</entry>
			<entry prefix="repeatable_binding_" type="activator">
				<_short>Binding</_short>
				<_short xml:lang="tr">Kısayol</_short>
				<_long>Sets the triggering activator binding.</_long>
				<_long xml:lang="tr">Tetikleyici kısayol aktivatörü ayarlar.</_long>
			</entry>
		</option>

		<option name="always_bindings" type="dynamic-list">
			<_short>Always bindings</_short>
			<_short xml:lang="tr">Her zaman bağlama</_short>
			<_long>Sets the bindings which are always available, even when screen is locked.</_long>
			<_long xml:lang="tr">Ekran kilitliyse bile, her zaman mevcut olan kısayolu ayarlar.</_long>
			<entry prefix="command_" type="string">
				<_short>Command</_short>
				<_short xml:lang="tr">Komut</_short>
				<_long>Sets the command to execute.</_long>
				<_long xml:lang="tr">Çalıştırılacak komutu ayarlar.</_long>
				<hint>file</hint>
			</entry>
			<entry prefix="always_binding_" type="activator">
				<_short>Binding</_short>
				<_short xml:lang="tr">Kısayol</_short>
				<_long>Sets the triggering activator binding.</_long>
				<_long xml:lang="tr">Tetikleyici kısayol aktivatörü ayarlar.</_long>
			</entry>
		</option>
	</plugin>
</wayfire>
