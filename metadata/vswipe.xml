<?xml version="1.0"?>
<wayfire>
	<plugin name="vswipe">
		<_short>Viewport Swipe</_short>
		<_short xml:lang="tr">Çalışma Alanı Geçişi</_short>
		<_long>A plugin to swipe workspaces in a grid.</_long>
		<_long xml:lang="tr">Bir ızgaradaki çalışma alanlarını kaydırmak için bir eklenti.</_long>
		<category>Desktop</category>
		<option name="enable_horizontal" type="bool">
			<_short>Enable horizontal</_short>
			<_short xml:lang="tr">Yatay kaydırmayı etkinleştir</_short>
			<_long>Enables or disables horizontal swiping.</_long>
			<_long xml:lang="tr">Yatay kaydırmayı etkinleştirir veya devre dışı bırakır.</_long>
			<default>true</default>
		</option>
		<option name="enable_vertical" type="bool">
			<_short>Enable vertical</_short>
			<_short xml:lang="tr">Dikey kaydırmayı etkinleştir</_short>
			<_long>Enables or disables vertical swiping.</_long>
			<_long xml:lang="tr">Dikey kaydırmayı etkinleştirir veya devre dışı bırakır.</_long>
			<default>true</default>
		</option>
		<option name="enable_free_movement" type="bool">
			<_short>Enable free movement</_short>
			<_short xml:lang="tr">Serbest kaydırmayı etkinleştir</_short>
			<_long>Enables or disables moving diagonally and more than one workspace at a time.</_long>
			<_long xml:lang="tr">Birden fazla çalışma alanına çapraz olarak kaydırmayı etkinleştirir veya devre dışı bırakır.</_long>
			<default>false</default>
		</option>
		<option name="enable_smooth_transition" type="bool">
			<_short>Enable smooth transition</_short>
			<_short xml:lang="tr">Yumuşak geçişi etkinleştir</_short>
			<_long>Enables or disables smooth transition.</_long>
			<_long xml:lang="tr">Yumuşak geçişi etkinleştirir veya devre dışı bırakır.</_long>
			<default>false</default>
		</option>
		<option name="duration" type="int">
			<_short>Duration</_short>
			<_short xml:lang="tr">Süre</_short>
			<_long>Sets the duration of the animation in milliseconds.</_long>
			<_long xml:lang="tr">Animasyonun süresini milisaniye olarak ayarlar.</_long>
			<default>180</default>
		</option>
		<option name="background" type="color">
			<_short>Background color</_short>
			<_short xml:lang="tr">Arkaplan rengi</_short>
			<_long>Sets the background color.</_long>
			<_long xml:lang="tr">Arkaplan rengini ayarlar.</_long>
			<default>0.1 0.1 0.1 1.0</default>
		</option>
		<option name="fingers" type="int">
			<_short>Number of fingers</_short>
			<_short xml:lang="tr">Kaydırma için parmak sayısı</_short>
			<_long>Specifies the number of fingers to swipe.</_long>
			<_long xml:lang="tr">Kaydırılacak parmak sayısını belirtir.</_long>
			<default>4</default>
		</option>
		<option name="gap" type="double">
			<_short>Gap</_short>
			<_short xml:lang="tr">Çalışma alanları arası boşluk</_short>
			<_long>Changes the gap in pixels.</_long>
			<_long xml:lang="tr">Çalışma alanları arasında ki boşluğu değiştirir.</_long>
			<default>32.0</default>
		</option>
		<option name="threshold" type="double">
			<_short>threshold</_short>
			<_short xml:lang="tr">Kaydırma eşiği</_short>
			<_long>Sets the threshold.</_long>
			<_long xml:lang="tr">Diğer çalışma alanına geçiş için kaydırma eşiğini ayarlar. (Çalışma alanı genişliğine göre yüzde olarak)</_long>
			<default>0.35</default>
		</option>
		<option name="delta_threshold" type="double">
			<_short>Delta threshold</_short>
			<_short xml:lang="tr">Delta kaydırma eşiği</_short>
			<_long>Sets the delta threshold.</_long>
			<_long xml:lang="tr">Delta kaydırma eşiğini ayarlar.</_long>
			<default>24.0</default>
		</option>
		<option name="speed_factor" type="double">
			<_short>Speed factor</_short>
			<_short xml:lang="tr">Hız faktörü</_short>
			<_long>Sets the speed factor.</_long>
			<_long xml:lang="tr">Hız faktörünü ayarlar.</_long>
			<default>256.0</default>
		</option>
		<option name="speed_cap" type="double">
			<_short>Speed cap</_short>
			<_short xml:lang="tr">Hız sınırı</_short>
			<_long>Sets the speed cap.</_long>
			<_long xml:lang="tr">Hız sınırını ayarlar.</_long>
			<default>0.05</default>
		</option>
	</plugin>
</wayfire>
